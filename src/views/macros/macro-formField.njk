{% macro input(type, name, class,label,  placeholder, value, dynamic) %}
    <div class="form-group {{ class }}">
        <label for="name">{{ label }}</label>
        <input type="{{ type }}" class="form-control" 
        name="{{ name }}" id="{{ name }}" 
        placeholder="{{ placeholder }}" autocomplete="off"
        value="{{ value }}"
        {{dynamic }}>
    </div>
{% endmacro %}

{% macro comboSingle(name, class,label, placeholder, style, o0, o1, o2, o3) %}
  <div class="form-group {{ class }}">
        <label for="{{ name }}">{{ label }}</label>
        <select id="{{ name }}" name="{{ name }}" class="form-control select2" 
        tabindex="-1" aria-hidden="true"  style="{{ style }}" data-placeholder="{{ placeholder }}" >
            <option></option>
            <option value="0" >{{ o0 }}</option>
            <option value="1" >{{ o1 }}</option>
            <option value="2" >{{ o2 }}</option>
            <option value="3" >{{ o3 }}</option>
