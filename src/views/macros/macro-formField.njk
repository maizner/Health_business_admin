
{% macro thumbFileComponent(imagesrc, name, text, acronym,type='file') %}
 <div class="thumbs_container fixed-element">
    <div class="thumbs_lg thumbs_circle thumbs_bordered"> 
        <div class="js_input_file">
            <div class="input_file">
                <label  for="{{ name }}" >
                    <div class="file_uploaded ellipsis" title="{{ text }}" > {{ text }} </div>
                    <img src="content/img/{{ imagesrc }}" alt="" width="100%"  height="auto" class="img">
                </label>
                <input type="{{ type }}" name="{{ name }}[]" id="{{ name }}"  class=" d-none tooltip"
                data-multiple-caption="{count} files selected" 
                multiple />
                <div class="acronym"> {{ acronym }} </div>
                
            </div>
        </div>
    </div>
</div>
{% endmacro %}

