<form class="form_content parsley js_form_validation login" name="Form" data-parsley-excluded="input[type=button], input[type=submit], input[type=reset], input[type=hidden], [disabled], :hidden"
 data-parsley-priority-enabled="true" data-parsley-validate>

    <h2 class="form_title">Inicia Sesión</h2>
    <div class="form-group">
        <label for="InputEmail">Email</label>
        <!--TODO: replace data-parsley-required-message by locale-->
        <input autocomplete="off" type="email" class="form-control" id="InputEmail" placeholder="demo@demo.com.ar" name="email"
        data-parsley-errors-container=".toast-top-full-width"
        data-parsley-trigger="change"
        data-parsley-required-message= "Mail: Ingresa demo@demo.com en el campo Email"
        data-parsley-type-message= "Mail: La cuenta ingresada tiene un formato inválido. Escribe demo@demo.com para esta demo"
        data-parsley-required>
        <span class="default_validation_msj"></span>
    </div>

    <div class="form-group password">
        <label for="password">Constraseña</label>
        <input type="password" autocomplete="off" name="password" id="password1" class="form-control password" placeholder=" 1 caracter"
        data-parsley-errors-container=".toast-top-full-width"
        data-parsley-trigger="submit"
        data-parsley-required-message= "Contraseña: Ingresar al menos 1 caracter"
     
        data-parsley-required />
        <span class="icon icon-password-invisible"></span>
        <span class="default_validation_msj"></span>
        <a class="forgot_psw " href="forgotPsw.html">¿Olvidaste tu contraseña?</a>
    </div>

    <button class="btn md_btn default_btn_1" type="submit">Ingresar</button>
</form>
