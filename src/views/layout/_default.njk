    <script src="content/js/layout.js"></script>
    <script src="content/js/vendor/scrollbar/nanoScroller.js"></script>

    <!--BUNDLE de página-->
    <!--page sctipts-->
    
    {% block pagescript %}{% endblock %}
    
    <!--Toast Validation Container-->
    <div id="toast-container" class="toast-top-full-width" aria-live="polite" role="alert"></div>

    {% block modal %}
        {% include "shared/_modal.njk" %}
    {% endblock %}
    
    <!--LOADER INFO: Para mostrar loader quitar la clase 'd-none' -->
    <div id="container-loader" class="d-none">
        {% block loader %}
            {% include "shared/_loader.njk" %}
        {% endblock %}
    </div>

    <script>
    $(document).ready(function() {
      

        //efecto en segunda navegación línea arriba
        $(".second-nav ul li:first-child").addClass("active")
        
        $(".cool-link-top").on("click", function(e){
            $(".second-nav ul").find(".active").removeClass("active")
            $(this).addClass("active")
        });
		        	
    });
    </script>

