 {% import "macros/macro-formField.njk" as pt %}
 <section class="edits">

    <!-- clase de bootstrap collapse para pasar de transitions a fw -->

 
        <form action="#" class="form_content parsley js_form_validation editar">

            <div class="fields_container container-large">
                
                <!--INFO DEV: Utilizar "default" y todo markup interno para configuración de nuevos elementos input 
                dentro de la estructura-->
                <div class="image_group_content">
                    {% block thumb %}
                        {{ pt.thumbFileComponent("thumb-dr3.png", "modify_ptImg1","Subir","FB" ) }}
                    {% endblock %} 
                    
                    {% block nombre %}
                        {{ pt.inputValidation("text", "name1", "default","Nombre","Nombre",  "Francisco Jose ") }}
                    {% endblock %} 

                    {% block apellido %}
                        {{ pt.inputValidation("text", "lastname1", "default","Apellido","Apellido", "Ballesteros") }}
                    {% endblock %} 

                    {% block afiliado %}
                        {{ pt.inputValidation("text", "affiliate1", "default",
                        "Afiliado #","Número de afiliado", "8006 3332 2445") }}
                    {% endblock %} 
                </div>

                {% block doctypeCombo %}
                    {{ pt.comboSingleValidation("ptDoctypeModify33", "fixed-element", 
                    "Documento Tipo", "Tipo", "width:110px", "DNI", "Passport", "LE", "LC", "selected") }}
                {% endblock %}

                {% block docNumber %}
                    {{ pt.inputValidation("number", "docNumber1", "default",
                    "Número de Documento #","Número de documento", "27454647") }}
                {% endblock %} 

                {% block birthdate %}
                    {{ pt.inputValidation("date", "date1", "default",
                    "Fecha de nacimiento","DD/MM/AAAA", "2080-06-01") }}
                {% endblock %} 

                {% block nationality %}
                    {{ pt.inputValidation("text", "affiliate1", "default",
                    "Nacionalidad","Ingresa tu nacionalidad", "Argentina") }}
                {% endblock %} 
                
                {% block email %}
                    {{ pt.inputMailValidation( "email1", "three_elem","Email","nombre@tumail.com", "ballesterosdrjose_88@gmail.com") }}
                {% endblock %} 


                {% block celphone %}
                    {{ pt.input( "number", "celphone1","three_elem","Número de celular","Ingresa tu celular", "54454672", "") }}
                {% endblock %} 

                {% block linephone %}
                    {{ pt.input("number", "linephone1","three_elem","Número de Teléfono","Ingresa tu Teléfono", "", "" ) }}
                {% endblock %} 

             
               <div class="form-group tags">
                    <label for="specSee4">Especialidad</label>
                    <select class="form-control select2 tag" multiple id="specSee4" data-placeholder="Ingrese una o más especialidades" 
                    >
                        <option></option>
                        <option selected>Clínica médica</option>
                        <option selected>Pedriatría</option>
                        <option>Traumatología</option>
                        <option >Dermatología</option>
                    </select>
                </div>

                <div class="form-group tags">
                    <label for="langNew4">Idioma</label>
                    <select class="form-control select2 tag" multiple id="langNew4" data-placeholder="Ingrese uno o más idiomas"
                    >
                        <option></option>
                        <option selected>Inglés</option>
                        <option selected>Español</option>
                        <option selected>Francés</option>
                    </select>
                </div>
             
            </div>
            <!--TODO DEV: Al cerrar form de usuario se debe =>
            •	Guardar los datos del usuario
